<%= form_for @post, url: create_post_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control' %>
  </div>

  <%= f.submit 'Add Post', class: 'btn btn-primary' %>
<% end %>
